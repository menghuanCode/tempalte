{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "consistent-return": 2,
        "indent"           : [1, 4],
        "no-else-return"   : 1,
        "semi"             : [0, "always"],
        "space-unary-ops"  : 2,
    },
    "parserOptions": {
        "sourceType": "module"
    }
}